        .wave {
            position: absolute;
            background-color: rgba(59, 130, 246, 0.2);
            border-radius: 50%;
            transform: scale(0);
            opacity: 0;
            animation: radiate 3s ease-out infinite;
        }
        .wave:nth-child(2) { animation-delay: 1s; }
        .wave:nth-child(3) { animation-delay: 2s; }
        @keyframes radiate {
            from {
                transform: scale(0);
                opacity: 1;
            }
            to {
                transform: scale(4);
                opacity: 0;
            }
        }
